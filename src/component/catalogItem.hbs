<div class="col-6">
    <div class="card mb-4">
        <img src="{{img}}" class="card-img-top">
        <div class="card-body">
            <div>
                {{#if isHot}}
                <div class="badge rounded-pill bg-warning bg-sm me-2 mb-3">HOT!</div>
                {{/if}}
                {{#if isNew}}
                <div class="badge rounded-pill bg-primary bg-sm mb-3">Нове</div>
                {{/if}}
            </div>
            <div>
                {{#if isFast}}
                <div class="btn btn-success btn-sm me-2 mt-2">Швидка доставка</div>
                {{/if}}
            </div>
            <div>
                {{#if isFree}}
                <div class="btn btn-secondary btn-sm mt-2">Безкоштовна доставка</div>
                {{/if}}
            </div>
            <h5 class="mt-3">{{name}}</h5>
            <div class="mt-3 mb-3">{{review.amount}} {{review.text}}</div>
            <h3>{{price}}</h3>
            <div class="mb-2">{{delivery}}</div>
            <div class="col-6">
                {{#each buttons}}
                <a href="{{link}}"
                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}} mt-2 mb-1">{{text}}</a>
                {{/each}}
            </div>
            <div class="mt-3">
                {{#each characteristics}}
                <ul>
                    <li>{{title}}: {{value}}</li>
                </ul>
                {{/each}}
            </div>
        </div>
    </div>
</div>