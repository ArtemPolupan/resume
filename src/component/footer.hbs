{{#with footer}}
<footer>
    <hr class="my-5">

    <div>
        {{#with social}}
        {{> uplink text=email.text href=email.href blank=true }}
        /
        {{> uplink text=phone.text href=phone.href blank=true }}
        /
        {{> uplink text=linkedin.text href=linkedin.href blank=true noLine=true}}
        {{/with}}
    </div>

    <div class="my-3">
        <em>Copyright by {{../header.name.firstname}} {{../header.name.lastname}}</em>
    </div>

    <div>
        <address>
            {{../header.address}}
        </address>
    </div>

</footer>
{{/with}}