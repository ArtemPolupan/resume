<main>
    <h1>{{name}}</h1>
    <h5>
        <div>{{description}}</div>
        <div>Price: {{price}} $</div>
        <div>Category: {{category}}</div>
    </h5>

    <br>
    <hr>
    <hr>

    <h2>Features</h2>
    <br>
    <ul>
        {{#with features}}
        <h4>Processor</h4>
        <ul>
            {{#with processor}}
            <div><b>Brand:</b> {{brand}}</div>
            <div><b>Model:</b> {{model}}</div>
            <div><b>Speed:</b> {{speed}}</div>
            <div><b>Cores:</b> {{cores}}</div>
            <div><b>Cache:</b> {{cache}}</div>
            {{/with}}
        </ul>

    </ul>

    <hr>

    <ul>
        {{#with memory}}
        <h4>Memory</h4>
        <ul>
            <div><b>Type:</b> {{type}}</div>
            <div><b>Size:</b> {{size}}</div>
            <div><b>Speed:</b> {{speed}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>
        {{#with storage}}
        <h4>Storage</h4>
        <ul>
            <div><b>Type:</b> {{type}}</div>
            <div><b>Size:</b> {{size}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>
        {{#with display}}
        <h4>Display</h4>
        <ul>
            <div><b>Resolution:</b> {{resolution}}</div>
            <div><b>Size:</b> {{size}}</div>
            <div><b>Technology:</b> {{technology}}</div>
            <div><b>Color space:</b> {{color_space}}</div>
            <div><b>Brightness:</b> {{brightness}}</div>
            <div><b>Refresh rate:</b> {{refresh_rate}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>
        {{#with graphics}}
        <h4>Graphics</h4>
        <ul>
            <div><b>Brand:</b> {{brand}}</div>
            <div><b>Model:</b> {{model}}</div>
            <div><b>Memory:</b> {{memory}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>
        <h4>Ports</h4>
        {{#each ports}}
        <ul>
            <div><b>Type:</b> {{type}}</div>
            <div><b>Count:</b> {{count}}</div>
            {{#if features}}
            <div><b>Features:</b></div>
            {{/if}}
            <ul>
                {{#each features}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </ul>
        {{/each}}
    </ul>

    <hr>

    <ul>
        {{#with battery}}
        <h4>Battery</h4>
        <ul>
            <div><b>Type:</b> {{type}}</div>
            <div><b>Capacity:</b> {{capacity}}</div>
            <div><b>Life:</b> {{life}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>

        <h4>Weight: {{weight}}</h4>
    </ul>

    <hr>

    <ul>
        {{#with dimensions}}
        <h4>Dimensions</h4>
        <ul>
            <div><b>Height:</b> {{height}}</div>
            <div><b>Width:</b> {{width}}</div>
            <div><b>Depth:</b> {{depth}}</div>
        </ul>
        {{/with}}
    </ul>

    <hr>

    <ul>

        <h4>Operating system: {{operating_system}}</h4>
    </ul>

    <hr>

    <ul>
        <h4>Accessories</h4>
        <ul>
            {{#each accessories}}
            <li>
                <div><b>Name:</b> {{name}}</div>
            </li>
            <div><b>Price:</b> {{price}} $</div>
            {{/each}}
        </ul>

        {{/with}}
</main>