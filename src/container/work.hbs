{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Досі працюю)
                            {{/if}}
                        </div>

                        <div>
                            {{#unless company.url}}
                            <b>{{company.name}}</b>
                            {{else}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{/unless}}
                        </div>


                        <div class="my-2">
                            <strong>Project ({{projectAmount}}) </strong>
                        </div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div>
                                    {{> link text=name href=url blank=true noLine=true}}
                                </div>

                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <div class="my-2"><em>Project stacks ({{stackAmount}})</em></div>
                                {{#each stacks}}
                            <li>
                                <div>{{name}}</div>
                            </li>
                            {{/each}}


                            <div class="my-2"><em>Project awards</em></div>
                            {{#each awards}}
                            <li>
                                <div>{{name}}</div>
                            </li>
                            {{/each}}

                    </li>
                    {{/each}}
                </ul>



                </li>
                {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}

</div>

