<div>
    {{#with person}}
    <main>
        <section>
            <h1>{{name}}</h1>
            <div>
                <p>Age: {{age}}</p>
                <p>Gender: {{gender}}</p>
                {{#with address}}
                <address>
                    <p>Address: {{country}}, {{state}}, {{city}}, {{street}}, ({{zip}}) </p>
                </address>
                {{/with}}
            </div>
        </section>

        <br>
        <br>
        <hr>

        <section>
            <em>{{> title data="Education" big=true}}</em>
            {{#each education}}
            <div>
                <p><strong>Degree:</strong> {{degree}}</p>
                <p><strong>Major:</strong> {{major}}</p>
                <p><strong>University:</strong> {{university}}</p>
                <p><strong>Graduation year:</strong> {{graduationYear}}</p>
            </div>
            {{/each}}
        </section>

        <br>
        <br>
        <hr>

        <section>
            <em>{{> title data="Work experience" big=true}}</em>
            {{#each workExperience}}
            <div>
                <p><strong>Company:</strong> {{company}}</p>
                <p><strong>Title:</strong> {{title}}</p>
                <p><strong>Years of work:</strong> {{startDate}} - {{endDate}}</p>
                <p><strong>Responsibilities:</strong> {{responsibilities}}</p>
                <p><strong>Year founded:</strong> {{year_founded}}</p>
                <p><strong>Industry:</strong> {{industry}}</p>

                <hr>

                <p><em>
                        <h3>Employees:</h3>
                    </em></p>
                {{#each employees}}
                <p><strong>Name:</strong> {{name}}</p>
                <p><strong>Position:</strong> {{position}}</p>
                <p><strong>Department:</strong> {{department}}</p>

                <br>

                <p><em><b>Projects:</b></em></p>
                {{#each projects}}
                <p><strong>Name:</strong> {{name}}</p>
                <p><strong>Description:</strong> {{description}}</p>
                <p><strong>Status:</strong> {{status}}</p>

                <br>

                <p><em><b>Teams:</b></em></p>
                {{#each teams}}
                <p><strong> Team name:</strong> {{team_name}}</p>
                <p><strong> Team leader:</strong></p>
                {{#with team_leader}}
                <p>Name: {{name}}</p>
                <p>Title: {{title}}</p>
                <p>Email: {{> link text=email.text href=email.href blank=true noLine=true}}</p>
                {{/with}}

                <p><strong> Team members:</strong></p>
                {{#each team_members}}
                <p>Name: {{name}}</p>
                <p>Title: {{title}}</p>
                <p>Email: {{> link text=email.text href=email.href blank=true noLine=true}}</p>
                <p>Skills: {{skills}}</p>

                <br>

                <p><em><b>Projects:</b></em></p>
                {{#each projects}}
                <p><strong>Name:</strong> {{name}}</p>
                <p><strong>Description:</strong> {{description}}</p>
                <ul>
                    <p>Technologies:</p>
                    {{#each technologies}}
                    <li>{{name}}</li>
                    {{/each}}
                </ul>

                <ul>
                    <p>Team members:</p>
                    {{#each team_members}}
                    <li>{{name}} ({{title}})</li>
                    {{/each}}
                </ul>
                {{/each}}
                {{/each}}
                {{/each}}
                {{/each}}
                {{/each}}
            </div>
            {{/each}}
        </section>
    </main>
    {{/with}}
</div>