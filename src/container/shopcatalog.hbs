<main>
    <div class="card mt-3 mb-3">
        <div class="nav">
            {{#each navigation.links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
            </div>
            {{/each}}
            {{#if disabl}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link disabled">Disabled</a>
            </div>
            {{/if}}
        </div>
    </div>

    <nav aria-label="breadcrumb" class="mt-5 mb-5">
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#unless url}}
            <li class="breadcrumb-item">
                {{name}}
            </li>
            {{else}}
            <li class="breadcrumb-item">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{/unless}}
            {{/each}}
        </ol>
    </nav>

    <h1>{{header}}</h1>

    <div class="row mt-4 mb-5">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row">
        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{#with filterBlock}}
                    <div class="card-title">{{sellers.title}}</div>
                    {{#each sellers.list}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    <hr>
                    <div class="card-title">{{brands.title}}</div>
                    <input class="form-control mb-3" placeholder="{{brands.input.placeholder}}">
                    {{#each brands.options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    <hr>
                    <div class="card-title">{{price.title}}</div>
                    <input class="form-control mb-3" placeholder="{{price.range.from}}">
                    <input class="form-control mb-3" placeholder="{{price.range.to}}">
                    {{#each filterList}}
                    <div class="card-title">{{title}}</div>
                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    {{#unless @last}}
                    <hr>
                    {{/unless}}
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="col-8">
            <div class="row">
                {{#each goodsList}}
                {{> catalogItem}}
                {{/each}}
            </div>
        </div>
    </div>

    {{#with service}}
    <div class="card text-bg-success my-5">
        <div class="card-body text-center">
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
            {{/each}}
        </div>
    </div>
    {{/with}}

    {{> footerShop}}
</main>