<main>

    <div class="card mt-3">
        <div class="nav">
            {{#each navigation.links}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
            </div>
            {{/each}}
            {{#if disabl}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link disabled">Disabled</a>
            </div>
            {{/if}}
        </div>
    </div>

    {{#with header}}
    <h1 class=" mt-5 pb-2">{{title}}</h1>
    {{#with button}}
    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
    {{/with}}
    {{/with}}

    <hr class="mt-5 mb-5">

    {{#each goodsBlock }}
    <div class="card my-4">
        <div class="card-body row">
            <div class=" col-2">
                <img class="card-img-top" src="{{image}}" alt="Product photo">
            </div>
            <div class=" col-4">
                <h3>{{name}}</h3>
                <p>{{description}}</p>
            </div>
            <div class="col-2">
                <div class="mt-4 ms-2">{{price.title}}:</div>
                <h3 class="mt-1 ms-2">{{price.value}}</h3>
            </div>
            <div class="col-2 mt-5">{{amount}}</div>
            <div class="col-2">
                {{#each buttons}}
                <a
                    class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}} btn-outline-danger{{/if}} m-3 ms-0">{{text}}</a>
                {{/each}}
            </div>
        </div>
    </div>
    {{/each}}


    <hr class="mt-5 mb-5">


    {{#with total}}
    <h3>{{title}}</h3>
    <h2>{{amount}}</h2>
    <div class="pb-3">{{delivery}}</div>
    {{#each buttons}}
    <div class="mt-3">
        <a href="{{link}}"
            class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success {{/if}}">{{text}}</a>
    </div>
    {{/each}}
    {{/with}}

    <hr class="mt-5 mb-5">

    {{> cartGoodsItem}}


    <hr class="mt-5 mb-5">

    {{#with subscribe}}
    <div class="card text-bg-dark ">
        <div class="card-body pb-0">
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
            <div class="mb-3">
                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}

    <hr class="mt-5 mb-5">

    {{> footerShop}}
</main>