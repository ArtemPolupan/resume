<main class="p-3">

    <div class="card mt-3">
        <div class="nav">
            {{#each navigation.links}}
            <div class="nav-item ">
                <a href="{{href}}" class="nav-link {{#unless href}}disabled{{/unless}}">{{text}}</a>
            </div>
            {{/each}}
            {{#if disabl}}
            <div class="nav-item">
                <a href="{{href}}" class="nav-link disabled">Disabled</a>
            </div>
            {{/if}}
        </div>
    </div>

    <h1 class="my-5">{{header}}</h1>

    <div class="row">
        <div class="col-8">
            {{#with contacts_data}}
            <h3 class="mb-4 pt-4">{{title}}</h3>
            {{#each buttons}}
            <div class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}} me-2 mb-4">
                {{text}}
            </div>
            {{/each}}


            {{#with form.input}}
            <div class="row">
                <div class="col-6 mb-3">
                    {{#with surname}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with name}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with phone}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with email}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>

                <hr class="mt-4">
            </div>
            {{/with}}

            {{#each form.switch}}
            <div class="form-check form-switch mt-3 pb-2">
                <label class="form-check-label">{{text}}</label>
                <input name="choose" type="checkbox" class="form-check-input" {{#if isActive}}checked{{/if}}>
            </div>
            {{/each}}
            {{/with}}

            <hr class="mt-4 col-8">

            {{#with delivery}}
            <h3 class="mb-4 pt-4">{{title}}</h3>
            <div class="card pe-1 mb-3">
                <div class="card-body">
                    <div class="row">
                        {{#each select}}
                        <div class="col-6 pe-1 ps-2">
                            <label class="form-label mb-0">{{label}}</label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>


            {{#each delivery_type}}
            <div class="form-check mb-2">
                <label class="form-check-label">{{type}}</label>
                <input name="check" type="radio" class="form-check-input">
            </div>
            {{/each}}

            <hr class="mt-4">

            {{#with payment}}
            <h3 class="mb-4 pt-4">{{title}}</h3>
            {{#each list}}
            <div class="form-check mb-0 mt-2">
                <label class="form-check-label ">{{type}}</label>
                <input name="choose" type="radio" class="form-check-input">
            </div>
            <div class="form-text">{{description}}</div>
            {{/each}}
            {{/with}}

            <hr class="mt-4">

            {{#with contact}}
            <h3 class="mb-4 pt-4">{{title}}</h3>
            <div class="row">
                <div class="col-6 mb-3">
                    {{#with surname}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with name}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with phone}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with email}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
            </div>
            {{/with}}

            <hr class="mt-4">

            <div class="col-12">
                {{#with coment}}
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            {{/with}}

            <hr class="mt-4">

            {{#with coupon}}
            <h3 class="mb-4 pt-4">{{title}}</h3>
            {{#with select.availabel_coupon}}
            <div class=" pe-1 pb-3">
                <label class="form-label mb-0">{{label}}</label>
                <select class="form-select form-select-lg">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
                {{#with select.friend_coupon}}
                <div class=" pe-1 py-3 ">
                    <label class="form-label mb-0">{{label}}</label>
                    <select class="form-select form-select-sm">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}
                    {{#with add.friend}}
                    <div class=" pe-1 py-3 ">
                        <label class="form-label">{{label}}</label>
                        <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                        {{#with add.colleague}}
                        <div class=" pe-1 py-3 ">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}

                        </div>
                    </div>
                    {{/with}}

                    <hr class="mt-4">

                    {{#with quiz}}
                    <h3 class="mb-4 pt-4">{{title}}</h3>
                    <label class="form-label">{{preference.title}}</label>
                    {{#each preference.options}}
                    <div class="form-check mb-3">
                        <label class="form-check-label ">{{this}}</label>
                        <input name="choose" type="radio" class="form-check-input">
                    </div>
                    {{/each}}
                    <div class="mt-4">
                        {{#with your_expirience}}
                        <label class="form-label mb-0">{{label}}</label>
                        <input class="form-control">
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with purchase_frequency}}
                        <label class="form-label mb-0">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                        {{/with}}
                    </div>

                    {{#with factors}}
                    <label class="form-label mt-4">{{title}}</label>
                    {{#each options}}
                    <div class="form-check mb-3">
                        <label class="form-check-label ">{{this}}</label>
                        <input name="choose" type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
        <div class="col-4 ps-0">
            <div class="card pt-2">
                {{#each action_block}}
                <div class="card-body ps-2 pt-0 pb-2">
                    <div
                        class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}} {{#if isInfo}}btn-info{{/if}}">
                        {{text}}
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="card mt-3">
                <div class="card-body p-2 pb-1">
                    <h2 class="card-title">{{total.title}}</h2>
                    {{#each total.item_list}}
                    <div>{{name}}: {{price}}</div>
                    {{/each}}
                    <hr>
                    {{#each total.additional_info}}
                    <div>{{text}}: {{value}}</div>
                    {{/each}}
                    <hr>
                    {{total.total_price.text}}: {{total.total_price.value}}
                    <hr>
                    {{#each total.button}}
                    <div>
                        <div
                            class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}} mb-2">
                            {{text}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <hr class="mt-4">

    {{> footerShop}}

</main>